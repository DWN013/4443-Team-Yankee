<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsSubActivities.SecurityAndPrivacyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/black"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="Security &amp; Privacy"
            app:titleTextColor="@android:color/white" />

        <!-- Lock Screen Item -->
        <LinearLayout
            android:id="@+id/lock_screen_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/lock_phone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/title_lock_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lock Screen"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/subtitle_lock_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screen lock type and timeout"
                    android:textSize="14sp"
                    android:textColor="#575a62" />
            </LinearLayout>
        </LinearLayout>

        <!-- Encryption Item -->
        <LinearLayout
            android:id="@+id/encryption_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/shield" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/title_encryption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encryption"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/subtitle_encryption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device encryption &amp; credentials"
                    android:textSize="14sp"
                    android:textColor="#575a62" />
            </LinearLayout>
        </LinearLayout>

        <!-- Find My Device Item -->
        <LinearLayout
            android:id="@+id/find_my_device_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/search" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/title_find_my_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find My Device"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/subtitle_find_my_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locate, lock, or erase device"
                    android:textSize="14sp"
                    android:textColor="#575a62" />
            </LinearLayout>
        </LinearLayout>

        <!-- Permissions Item -->
        <LinearLayout
            android:id="@+id/permissions_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/key" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/title_permissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permissions"
                    android:textSize="20sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/subtitle_permissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App permissions &amp; manager"
                    android:textSize="14sp"
                    android:textColor="#575a62" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
