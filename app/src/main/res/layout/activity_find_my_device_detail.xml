<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Find My Device"
        app:titleTextColor="@android:color/white" />

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Display simulated Find My Device info -->
            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find My Device: Enabled&#10;Last located: 15 minutes ago&#10;&#10;Features:&#10;• Remotely lock device&#10;• Remotely erase device&#10;• Play sound to locate device nearby"
                android:textSize="16sp" />

            <Button
                android:id="@+id/lock_device_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote Lock"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/erase_device_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote Erase"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/play_sound_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Sound"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
