<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Permissions"
        app:titleTextColor="@android:color/white" />

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Display simulated permissions info -->
            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permissions Overview:&#10;• Location: 4 apps&#10;• Camera: 3 apps&#10;• Microphone: 2 apps&#10;• Contacts: 5 apps&#10;&#10;Features:&#10;• Review permissions per app&#10;• Revoke or grant permissions"
                android:textSize="16sp" />

            <Button
                android:id="@+id/manage_permissions_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Permissions"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
